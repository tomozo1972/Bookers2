<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(300, 300) %>
  <table>
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <% if @user == current_user %>
    <%= link_to edit_user_path(@user) do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>


<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <p>title</p>
      <%= f.text_field :title %>
    <p>opinion</p>
      <%= f.text_field :body %><br/>
    <%= f.submit 'Create Book' %>
  <% end %>


<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(100, 100) %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>